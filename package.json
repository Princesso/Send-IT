    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "pug": "^2.0.3"
  },
  "nyc": {
    "reporter": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ],
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
